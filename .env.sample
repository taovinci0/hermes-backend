# Hermes v1.0.0 Environment Configuration Template
# Copy this to .env and fill in your values

# ============================================================================
# Zeus Weather API Configuration
# ============================================================================
ZEUS_API_BASE=https://api.zeussubnet.com
ZEUS_API_KEY=your_zeus_api_key_here

# ============================================================================
# Polymarket API Configuration
# ============================================================================
POLY_GAMMA_BASE=https://gamma-api.polymarket.com
POLY_CLOB_BASE=https://clob.polymarket.com

# ============================================================================
# Execution Mode
# ============================================================================
# Options: paper | live
# - paper: Simulates trades (safe, no real money)
# - live: Places real orders (Stage 8, requires POLYMARKET_PRIVATE_KEY)
EXECUTION_MODE=paper

# ============================================================================
# Probability Model Mode (Stage 7B)
# ============================================================================
# Options:
#   spread  → uses hourly spread × √2 (default, Stage 3)
#   bands   → uses Zeus likely/possible confidence intervals (Stage 7B)
MODEL_MODE=spread

# Zeus Confidence Band Levels (for bands model)
# Used when MODEL_MODE=bands and Zeus provides confidence data
ZEUS_LIKELY_PCT=0.80    # 80% confidence level
ZEUS_POSSIBLE_PCT=0.95  # 95% confidence level

# ============================================================================
# Trading Configuration
# ============================================================================
# Comma-separated station codes to trade
ACTIVE_STATIONS=EGLC,KLGA

# Minimum edge to trade (0.05 = 5%)
EDGE_MIN=0.05

# Effective fees in basis points (50 = 0.50%)
FEE_BP=50

# Assumed slippage in basis points (30 = 0.30%)
SLIPPAGE_BP=30

# Maximum Kelly fraction per decision (0.10 = 10% of bankroll)
KELLY_CAP=0.10

# Daily bankroll limit in USD
DAILY_BANKROLL_CAP=3000

# Per-market position limit in USD
PER_MARKET_CAP=500

# Minimum market liquidity required in USD
LIQUIDITY_MIN_USD=1000

# ============================================================================
# Logging
# ============================================================================
# Options: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# ============================================================================
# Live Trading (Stage 8 - not yet implemented)
# ============================================================================
# Uncomment and fill when ready for live trading:
# POLYMARKET_PRIVATE_KEY=0x...
# POLYMARKET_WALLET_ADDRESS=0x...
# CHAIN_ID=137
